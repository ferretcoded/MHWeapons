<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <% if notice %>
        <div class="alert alert-success"><%= notice %></div>
      <% end %>

      <div class="card">
        <div class="card-header">
          <h1 class="h3 mb-0">Weapon Type Details</h1>
        </div>

        <div class="card-body">
          <%= render @weapon_type %>
        </div>

        <div class="card-footer d-flex justify-content-between align-items-center">
          <div>
            <%= link_to "Back to weapon types", weapon_types_path, class: "btn btn-outline-secondary" %>
            <%= link_to "Edit this weapon type", edit_weapon_type_path(@weapon_type), class: "btn btn-outline-primary ms-2" %>
          </div>
          <%= button_to "Destroy this weapon type", @weapon_type, method: :delete, 
              form: { data: { turbo_confirm: "Are you sure you want to delete this weapon type?" } },
              class: "btn btn-danger" %>
        </div>
      </div>
    </div>
  </div>
</div>