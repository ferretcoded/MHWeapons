<!-- app/views/weapon_types/index.html.erb -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Weapon Types</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbo-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbo-track': 'reload' %>
</head>
<body>
  <div class="container py-5">
    <h1 class="text-center mb-4">Weapon Types</h1>

    <!-- Button to create a new weapon type -->
    <%= link_to 'Create New Weapon Type', new_weapon_type_path, class: 'btn btn-primary mb-4' %>

    <div class="row">
      <% @weapon_types.each do |weapon_type| %>
        <div class="col-12 col-md-6 col-lg-4 mb-4">
          <div class="card bg-secondary text-light h-100">
            <div class="card-body d-flex flex-column">
              <h5 class="card-title text-center"><%= weapon_type.name %></h5>
              <div class="d-flex justify-content-between mt-auto">
                <!-- Edit button aligned to the left -->
                <%= link_to 'Edit', edit_weapon_type_path(weapon_type), class: 'btn btn-warning btn-sm' %>

                <!-- Delete button aligned to the right -->
                <%= link_to 'Delete', weapon_type_path(weapon_type), method: :delete, data: { confirm: 'Are you sure you want to delete this weapon type?' }, class: 'btn btn-danger btn-sm' %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</body>
</html>
